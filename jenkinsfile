pipeline {
    agent {label 'docker-node'}

    environment {
        REGISTRY = "registry.sampas.com.tr"
        IMAGE_NAME = "rtsp-to-web"
        VERSION = "1.0.${BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/SampasHolding/RTSPtoWeb.git'
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    sh """
                    docker build -t $REGISTRY/$IMAGE_NAME:$VERSION .
                    docker tag $REGISTRY/$IMAGE_NAME:$VERSION $REGISTRY/$IMAGE_NAME:latest
                    """
                }
            }
        }
        stage('Docker Login') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'user-nexus',
                                                     usernameVariable: 'USERNAME',
                                                     passwordVariable: 'PASSWORD')]) {
                        sh "echo $DOCKER_PASS | docker login $REGISTRY -u $USERNAME --password-stdin"
                    }
                }
            }
        }

        stage('Docker Push') {
            steps {
                script {
                    sh """
                    docker push $REGISTRY/$IMAGE_NAME:$VERSION
                    docker push $REGISTRY/$IMAGE_NAME:latest
                    """
                }
            }
        }
    }
}
